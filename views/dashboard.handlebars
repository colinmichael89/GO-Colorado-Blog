{{!-- Populates with blog posts created by the user {{>post}} & option to create a {{>newpost}} --}}
<!-- Loop over each object in the projects array -->
{{#each post}}
  <div class="row mb-4 post">
    <div class="col-md-5">
      <h2>
        <a href="/post/{{post.id}}">{{post.post_title}}</a>
      </h2>
      <p>Created by
        {{post.user_name}}
        on
        {{format_date post.date_created}}</p>
    </div>
    <div class="col-md-7">
      <p>
        {{post.post_content}}
      </p>
    </div>
  </div>
{{/each}}